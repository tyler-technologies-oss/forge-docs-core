{
  "compilerOptions": {
    "baseUrl": "src/",
    "module": "esnext",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "common": ["src/common/*"],
      "components": ["src/components/*"],
      "core": ["src/core/*"],
      "utils": ["src/utils/*"]
    },
  },
  "include": ["src", "global.d.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": ["typePatches"]
}
